<Page
    x:Class="MyBlog.BlogWriting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyBlog"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="20,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"></RowDefinition>
                    <RowDefinition Height="70"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Row="0">
                    <TextBox Name="blogTitle"
                             Width="500px"
                             Height="30"
                             Margin="20,0,0,0"
                             PlaceholderText="title"></TextBox>
                    <DatePicker Name="publicDate"
                        Width="400"
                        VerticalAlignment="Center"
                                Margin="20,0,0,0"/>
                    <ListBox Width="Auto" Margin="20,0,0,0" Name="typeList">
                        <ComboBox Name="typeSelectBox" Width="Auto"                                  
                                  VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ComboBoxItem Content="tech" IsSelected="True"></ComboBoxItem>
                            <ComboBoxItem Content="life"></ComboBoxItem>
                            <ComboBoxItem Content="tool"></ComboBoxItem>
                        </ComboBox>
                    </ListBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="1">

                    <TextBox Name="blogTags"
                             Width="400px" Height="30"
                             Margin="20,0,0,0" PlaceholderText="tags"></TextBox>
                    <TextBox Name="blogDescription"
                             Width="500px" Height="30"
                             Margin="20,0,0,0" PlaceholderText="description"></TextBox>
                    <Button Margin="35,9,0,0"
                        Background="Green"
                        Name="SaveButton"
                        Click="SaveButton_Click"
                        Width="100px"
                        Content="Save"
                        HorizontalAlignment="Center" VerticalAlignment="Center"/>


                </StackPanel>
            </Grid>



        </StackPanel>
        <StackPanel Grid.Row="1" Margin="20,0,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBox
                    Name="blogContent"
                    Height="500px"
                    Width="1050px"
                    HorizontalAlignment="Center"
                    PlaceholderText="type blog content"
                    Margin="20,20,0,0"
                    TextWrapping="Wrap"></TextBox>
                <TextBlock Name="textBlockFileName" Width="300" Height="300" FontSize="30" Margin="12" TextWrapping="Wrap"/>
            </StackPanel>
        </StackPanel>




    </Grid>
</Page>
